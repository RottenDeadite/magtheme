<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container htmlTag="div" htmlClass="atc-gallery" before="-" name="atcgallery" />
        </referenceContainer>
        <move element="product.info.media" destination="atcgallery" before="-"/>
        <move element="product.info.main" destination="atcgallery" after="-"/>
        <move element="product.info.sku" destination="product.info.main" before="product.info.price"/>
    </body>
</page>
